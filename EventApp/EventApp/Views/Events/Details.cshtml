@model Event
@{
    ViewData["Title"] = "Details";
}

<h1>Eventdetaljer</h1>

<div class="row">
    <div class="col-md-2">
        <img src="@Model.ImageUrl" class="img-responsive" />
        <hr />
        @if (User.Identity.IsAuthenticated)
        {
            <a href="#" class="btn btn-primary">Anmäl till event</a>
        }
    </div>
    <div class="col-md-10">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p>Plats: @Model.Place</p>
        <p>Tid: @Model.Time</p>
    </div>
</div>

@Html.Partial("EventDetailsParticipantsPartial")

